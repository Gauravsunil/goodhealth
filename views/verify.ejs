<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>Login</title>
    <% include ./partials/head %>
  </head>
  <body>
    <% include ./partials/header %> 
    <div class="container">
      <div class="col-xs-10 col-md-5 col-xs-offset-1 col-md-offset-4 block">
         <h2>Verify Mobile No.</h2>
         <% if(status==='wrong'){%>
          <div class="alert alert-danger">
            <p>Wrong Code</p>
          </div>
          <% } %>
        <form action="/users/verify/<%= mobile %>" method="post">
          
          <div class="form-group">
            <label htmlFor="mobile_no">Mobile Number</label>
            <input type="text" name="mobile_no" id="mobile_no" value="<%= mobile %>"  disabled class="form-control">
          </div>
          <div class="form-group">
            <label htmlFor="code">Enter Code</label>
            <input type="text" name="code" id="code" class="form-control" required>
          </div>
          <button type="submit" class="btn btn-success">Verify</button>
        </form>
      </div>
    </div>
  </body>
</html>
